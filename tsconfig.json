{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "pages": ["./pages"],
      "components/*": ["./components/*"],
      "css": ["./css"],
      "constants": ["./constants"],
      "context": ["./context"],
      "hooks": ["./hooks"],
      "api": ["./pages/api"],
      "interfaces": ["./interfaces"],
      "utils": ["./utils"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "pages/_document.js"]
}
